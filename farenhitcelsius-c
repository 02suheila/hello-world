#include <stdio.h>

int main() {
  float c,f,ca,fe;
  printf("enter a celsius value to convert into farenheit");
  scanf("%f",&c);
  fe=(1.8*c)+32;
  printf("\n %0.2f celsius= %0.2f farenheit ",c,fe);
  printf("\n enter a farenheit value to convert into celsius");
  scanf("%f",&f);
  ca=(f-32)/1.8;
  printf("\n %0.2f farenheit= %0.2f celsius ",f,ca);
    return 0;
}
